        <!-- Code 93 -->
        <!-- ITF -->
        <!-- Codabar -->
        <!-- MSI -->
        <!-- RSS-14 -->
        <!-- QR Code -->
        <!-- Data Matrix -->
        <!-- Aztec -->
        <!-- PDF-417 -->
    </DockPanel>
</Window>
